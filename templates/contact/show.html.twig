{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1 class="mb-4">Détail du contact :</h1>

    <table class="table table-bordered w-auto">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ contact.nom }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ contact.numero }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gap-2 mt-3">
        <a href="{{ path('app_contact_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="btn btn-warning">Modifier</a>
        {{ include('contact/_delete_form.html.twig') }}
    </div>
{% endblock %}
