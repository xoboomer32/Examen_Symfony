<div class="card shadow-sm mx-auto" style="max-width: 500px;">
    <div class="card-body">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            <div class="mb-3">
                {{ form_label(form.contact, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.contact, {'attr': {'class': 'form-control'}}) }}
            </div>
            {% if form.nom is defined %}
            <div class="mb-3">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
            {% endif %}
            <div class="mb-3">
                {{ form_label(form.numero, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.numero, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="d-flex justify-content-end">
                <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
